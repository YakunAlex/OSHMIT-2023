#include <iostream>
using namespace std;

int main() {
	int x = 0;
	// îáúÿâëåíèå ïåðåìåííîé
	// int - òèï ïåðåìåííîé, öåëîå ÷èñëî
	// x - ýòî íàçâàíèå ïåðåìåííîé
	// = 0 - çíà÷åíèå ïåðåìåííîé
	
	x = 1;
	// òåïåðü çíà÷åíèå x = 1
	
	x = x + 1;
	// òåïåðü x = 2
	
	// x + 1 = x;
	// íå áóäåò ðàáîòàòü ïîòîìó ÷òî ñëåâà îò = äîëæíà áûòü ïåðåìåííàÿ
	
	cout << "The x equals to " << x << endl;
	// ìîæíî âûâîäèòü ïåðåìåííûå ÷åðåç cout
}
